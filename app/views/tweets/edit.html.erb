<% if @tweet.errors.present? %>
<h2>エラー箇所があります。</h2>
<ul>
    <% @tweet.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>
<%= form_for @tweet, message:{action: :create} do |f| %>
    <%= f.label :message, 'コメント' %>
    <%= f.text_field :message %>
    <%= f.submit '更新' %>
<% end %>
    